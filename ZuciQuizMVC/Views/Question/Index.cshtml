@model IEnumerable<ZuciQuizLibrary.Models.Question>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TopicId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionText)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TopicId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionText)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { questionId = item.Id }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Details", "Details", new { questionId = item.Id }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { questionId = item.Id }, new { @class = "btn btn-danger" })|
                    @Html.ActionLink("GetQuestionByTopicId", "GetQuestionByTopicId", new { topicId = item.TopicId }, new { @class = "btn btn-warning" })
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Index","IndexofAdmin")" class="btn btn-success btn-lg">Back to Home Index</a>
