@model IEnumerable<ZuciQuizLibrary.Models.User>

@{
    ViewData["Title"] = "Index";
}

<style>

    body, table {
        padding: 0;
        margin: 0;
    }

    .table {
        border-collapse: collapse;
        width: 100%;
        margin: 0 auto;
    }

        .table th,
        .table td {
            border: 1px solid white;
            padding: 8px;
            text-align: left;
        }

        .table th {
            background-color: white;
        }

    .btn {
        display: inline-block;
        padding: 8px 16px;
        text-align: center;
        text-decoration: none;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-green {
        background-color: green;
        color: white;
    }

    .btn-red {
        background-color: red;
        color: white;
    }

    .btn:hover {
        opacity: 0.8;
    }
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-green">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Role.RoleName)</th>
            <th>@Html.DisplayNameFor(model => model.UserName)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.RoleId)</td>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { userId = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Details", "Details", new { userId = item.Id }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { userId = item.Id }, new { @class = "btn btn-red" })

                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Index", "IndexofAdmin")" class="btn btn-success btn-lg">Back to Home Index</a>
